<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_2"
    tools:context=".PantallaPrincipal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:weightSum="4">

        <!-- iconos-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight=".2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/prin_btnMenu"
                    android:layout_width="@dimen/menuButtonWidth"
                    android:layout_height="@dimen/menuButtonHeight"
                    android:layout_gravity="right"
                    android:background="@color/boton"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/menuwhite" />
            </LinearLayout>


        </LinearLayout>

        <!-- info alumno -->
        <LinearLayout
            android:id="@+id/prin_imagen_perfil_lyt"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="vertical">
            <!-- imagen, grupo y nombre-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="15dp">


                    <ImageView
                        android:id="@+id/prin_imagen_perfil"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/perfilninio" />
                </androidx.cardview.widget.CardView>

                <!-- nombre y grupo-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/prin_nombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gotham_bold"
                        android:text="@string/nombreAlumno"
                        android:textColor="@color/white"
                        android:textSize="25sp" />


                    <TextView
                        android:id="@+id/prin_grado_grupo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gotham_light"
                        android:text="@string/grado"
                        android:textColor="@color/white"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
            <!-- seek bar-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="1.5"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <SeekBar
                    android:id="@+id/seekBar_luminosite"
                    android:layout_width="300dp"
                    android:layout_height="0dip"
                    android:layout_weight=".6"
                    android:progress="75"
                    android:progressDrawable="@drawable/seekbar_style"
                    android:splitTrack="false"
                    android:thumb="@drawable/ic_baseline_star_24" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1.4"
            android:orientation="vertical"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight=".5"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/mensajeglobowhite" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="110dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/mensajes"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </RelativeLayout>


            </LinearLayout>

            <!-- TAREAS Y CLASES GRABADAS -->
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:weightSum="2">
                <!-- TAREAS-->
                <LinearLayout
                    android:id="@+id/prin_btn_tareas"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_options"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/tareaswhite" />


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/gotham_bold"
                        android:gravity="center_horizontal"
                        android:text="TAREAS"
                        android:textColor="@color/white"
                        android:textSize="20sp" />


                </LinearLayout>

                <!-- CLASES GRABADAS-->
                <LinearLayout
                    android:id="@+id/prin_btn_claseGrabadas"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_options"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/clasewhite" />


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/gotham_bold"
                        android:gravity="center_horizontal"
                        android:text="CLASES \n GRABADAS"
                        android:textColor="@color/white"
                        android:textSize="20sp" />


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1.4"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight=".5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nombreProfesor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/poppins_extralight"
                    android:gravity="left"
                    android:text="Clases"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/print_recycler_view_clases"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal">

                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>

            <!--tutorias-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight=".5"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/poppins_extralight"
                    android:gravity="left"
                    android:text="Tutorias"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <androidx.recyclerview.widget.RecyclerView

                    android:id="@+id/print_recycler_view_tutorias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal">

                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>